{
	"name": "aws-cdk-config-builder",
	"version": "1.2.2",
	"description": "Helper library to build AWS CDK configs",
	"main": "dist/index.js",
	"scripts": {
		"test": "jest --collectCoverage",
		"format": "prettier --write",
		"lint": "eslint --fix",
		"build": "esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/index.js && npm run emitDeclaration",
		"emitDeclaration": "tsc -p tsconfig.prod.json --emitDeclarationOnly --outDir dist"
	},
	"lint-staged": {
		"src/**/*.{js,ts,jsx,tsx}": [
			"npm run lint"
		],
		"*.{json,.js,ts,jsx,tsx}": [
			"npm run format"
		]
	},
	"keywords": [
		"aws",
		"cdk",
		"config"
	],
	"author": "grandmasterdev",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^29.1.2",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"esbuild": "^0.15.11",
		"eslint": "^8.25.0",
		"husky": "^8.0.1",
		"jest": "^29.2.0",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"constructs": "^10.1.132"
	}
}
